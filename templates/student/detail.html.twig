{% extends "base.html.twig" %}

{% block body %}
<div class="container col-md-8 text-center mt-3">
   <div class="row">
      {# <div class="col-4">
         <div class="card">
            <img src="{{ asset('images/books/'~book.image)}}" width="300" height="300">
         </div>
      </div> #}
      <div class="col-6">
         <table class="table table-bordered">
            <tr>
               <th colspan="2" class="bg-light">
                  <h2 class="text-danger">{{ student.name }} </h2>
               </th>
            </tr>
            <tr class="h4">
               <th>Email</th>
               <td>{{ student.email }}</td>
            </tr>
            <tr class="h4">
               <th>Major</th>
               <td>{{ student.major }} </td>
            </tr>
            <tr class="h4">
               <th>Phone number</th>
               <td>{{ student.phone }} </td>
            </tr>
            <tr class="h4">
               <th>Class(s)</th>
               <td>
               {% if student.classes == null %}
                    <i>Undefined</i>
               {% else %}
                    <a href="{{ path('classes_detail', {'id' : classes.id }) }} "</a> <br>
               {% endif %}
            </tr>
            <tr class="h4">
               <th>Course(s)</th>
               <td>
               {% if student.course == null %}
                    <i>Undefined</i>
               {% else %}
                    <a href="{{ path('course_detail', {'id' : course.id }) }} "</a> <br>
               {% endif %}
            </tr>
               </td>
            </tr>
         </table>
      </div>
   </div>
</div>
{% endblock %}